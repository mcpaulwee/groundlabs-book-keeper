<h1>Users</h1>
<%= link_to "Add New User", new_user_path%>
<table>
    <tr>
        <th>ID</th>
        <th>User Name</th>
        <th>Action</th>
    </tr>
    <% @users.each do |user|%>
    <tr>
        <td><%= user.id%></td>
        <td><%= link_to user.name, user_path(user)%></td>
        <td><%= link_to "EDIT", edit_user_path(user.id)%></td>
        <td><%= link_to "DELETE", user_path(user), method: :delete, data:{confirm: "Are you sure?"}%></td>
    </tr>
    <% end %>
</table>

<br>

